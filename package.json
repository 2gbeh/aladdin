{
  "name": "aladdin-monorepo",
  "version": "1.0.0",
  "description": "Personal Finance & Productivity App - Full Stack Monorepo",
  "private": true,
  "workspaces": [
    "client"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "cd client && npm start",
    "dev:server": "cd server && dotnet watch run",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && dotnet build",
    "test": "npm run test:client",
    "test:client": "cd client && npm test",
    "lint": "npm run lint:client",
    "lint:client": "cd client && npm run lint",
    "format": "prettier --write \"**/*.{js,ts,json,md,html,css,scss}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md,html,css,scss}\"",
    "clean": "npm run clean:client && npm run clean:server",
    "clean:client": "cd client && rm -rf dist node_modules",
    "clean:server": "cd server && dotnet clean && rm -rf bin obj",
    "install:all": "npm install && cd client && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
