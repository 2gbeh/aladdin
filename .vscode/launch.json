{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Client (Angular)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/client",
      "program": "${workspaceFolder}/client/node_modules/@angular/cli/bin/ng",
      "args": [
        "serve",
        "--port=3000"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Launch Server (.NET)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Build Server",
      "program": "${workspaceFolder}/server/bin/Debug/net9.0/server.dll",
      "args": [],
      "cwd": "${workspaceFolder}/server",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "name": "Debug Client in Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/client/src",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:/*": "${webRoot}/*",
        "/./*": "${webRoot}/*",
        "/src/*": "${webRoot}/*",
        "/*": "*",
        "/./~/*": "${webRoot}/node_modules/*"
      }
    }
  ],
  "compounds": [
    {
      "name": "Launch Full Stack",
      "configurations": [
        "Launch Server (.NET)",
        "Launch Client (Angular)"
      ],
      "stopAll": true
    }
  ]
}
